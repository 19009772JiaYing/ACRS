<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.android.gms.samples.vision.ocrreader"
    android:installLocation="auto">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:hardwareAccelerated="true"
        android:icon="@drawable/phoneicon"
        android:label="ACRS"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">


        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".CapturedPage" />
        <activity android:name=".AuthorizedDisplay" />
        <activity android:name=".UnauthorizedDisplay" />
        <activity android:name=".ScanActivity" />


        <activity android:name=".ForgetPW"></activity>
        <activity android:name=".SecurityHome" />
        <activity android:name=".Admin" />
        <activity android:name=".Register" />
        <activity android:name=".LogIn" />
        <activity android:name=".RegisterOrLogin" />


        <activity android:name=".AddVehicle"/>
        <activity android:name=".memberList" />
        <activity android:name=".Update" />
        <activity android:name=".AddMember"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="ocr" />

        <activity
            android:name=".OcrCaptureActivity"
            android:label="Capture License Plate" />
    </application>

</manifest>